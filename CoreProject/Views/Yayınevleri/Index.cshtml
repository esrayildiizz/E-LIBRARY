@model IEnumerable<EntityLayer.Concrete.Yayinevleri>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h1 style="margin-left: 50px;">Yayınevleri</h1>

<div class="row">
    <div class="col-md-8">
        <div class="card" style="margin-left: 50px;">
            <div class="card-header">
                <table class="table table-hover border-dark col-md-12" style="margin-top:50px;">
                    <thead>
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.YayineviAd)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.YayineviAdres)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.YayineviAd)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.YayineviAdres)
                                </td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.YayineviID">Düzenle</a> |
                                    <a asp-action="Delete" asp-route-id="@item.YayineviID">Sil</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<br />
<p style="margin-left: 50px;">
    <a asp-action="Create">Yeni Yayınevi  Ekle</a>
</p>

