@model EntityLayer.Concrete.Kitaplar

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 style="margin-left: 50px;">Kitap Ekleme Sayfası </h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <div class="card" style="margin-left: 50px;">
            <div class="card-header">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="KitapAd" class="control-label"></label>
                            <input asp-for="KitapAd" class="form-control" />
                            <span asp-validation-for="KitapAd" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="KitapBasimYili" class="control-label"></label>
                            <input asp-for="KitapBasimYili" class="form-control" />
                            <span asp-validation-for="KitapBasimYili" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="YazarID" class="control-label"></label>
                            <input asp-for="YazarID" class="form-control" />
                            <span asp-validation-for="YazarID" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Create" class="btn btn-primary" />
                        </div>
                    </form>
            </div>
        </div>
    </div>
</div>
<br />
<div style="margin-left: 50px;">
    <a asp-action="Index">Geriye Dön</a>
</div>

